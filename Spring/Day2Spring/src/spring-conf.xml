<?xml version="1.0" encoding="UTF-8"?>

<!-- This the Spring Configuration File  -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="triangle" class="Triangle">
        <constructor-arg value="10"></constructor-arg>
        <constructor-arg value="20"></constructor-arg>
        <constructor-arg value="40"></constructor-arg>
    </bean>
    <bean id="equilateralTriangle" class="EquilateralTriangle">
        <constructor-arg value="10"></constructor-arg>
    </bean>
    <bean id="isocelesTriangle" class="IsocelesTriangle">
        <constructor-arg value="10"></constructor-arg>
        <constructor-arg value="20"></constructor-arg>
    </bean>
    <bean id="rectangle" class="Rectangle">
        <constructor-arg value="5"></constructor-arg>
        <constructor-arg value="10"></constructor-arg>
    </bean>
    <bean id="square" class="Square">
        <constructor-arg value="10"></constructor-arg>
    </bean>
</beans>