<?xml version="1.0" encoding="UTF-8"?>

<!-- This the Spring Configuration File  -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Bean is type of object that has unique dependencies   -->

    <bean id="objType1" class="Student">
        <!-- setter injection using setter of properties which is done after constructor callinh-->
        <property name="rollno" value="1"></property>
        <property name="name" value="Vikram"></property>
    </bean>

    <bean id="objType2" class="Student">
        <property name="rollno" value="20"></property>
        <property name="name" value="Simran"></property>
    </bean>

    <bean id="objType3" class="Student">
        <property name="rollno" value="3"></property>
        <property name="name" value="Raja"></property>

    </bean>

